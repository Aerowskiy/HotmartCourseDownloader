{
    "name": "Hotmart Course Downloader",
    "version": "1.0",
    "description": "A extension to single-click download all videos from a hotmart course!",
    "permissions": [
      "activeTab",
      "tabs",
      "downloads",
      "<all_urls>",
      "management",
      "webNavigation"
    ],
    
    "browser_action": {
      "default_title": "HCD - Download!"
    },
    
    "background": {
      "persistent": true,
      "page": "background.html"
    },
    
    "options_page": "options.html",
    "manifest_version": 2
  }
